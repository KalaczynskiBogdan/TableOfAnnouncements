<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CityDialogTextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:background">@drawable/rounded_background_edit</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DialogTransparentBackground" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>