<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.announcement.AnnouncementFragment">

        <ImageView
            android:id="@+id/ivImageAnnScr"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/item_notebook_vp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleAnnScr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/ads_title_hint"
            app:layout_constraintTop_toBottomOf="@+id/ivImageAnnScr" />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/tvPriceAnnScr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/ads_price_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleAnnScr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="USD"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvPriceAnnScr"
            app:layout_constraintTop_toTopOf="@+id/tvPriceAnnScr" />

        <TextView
            android:id="@+id/tvDescriptionAnnScr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/ads_title_hint"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceAnnScr" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:backgroundTint="@color/green_light"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="12dp"
            android:background="@drawable/rounded_background_edit"
            android:id="@+id/clButtonCall"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/clButtonSend"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionAnnScr" >

            <ImageView
                android:contentDescription="@null"
                android:src="@drawable/ic_call"
                android:id="@+id/ivCall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCall"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCall"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvCall"
                android:textColor="@color/grey2"
                android:textSize="20sp"
                android:text="Call"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@+id/clButtonCall"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background_edit"
            android:id="@+id/clButtonSend"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionAnnScr" >
            
            <ImageView
                android:contentDescription="@null"
                android:src="@drawable/ic_send"
                android:id="@+id/ivSend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvSend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/green_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivSend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvSend"
                android:textSize="20sp"
                android:text="Send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <TextView
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@+id/tvCategoryReceived"
            android:id="@+id/tvCategoryAnnScr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_category_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clButtonCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginEnd="16dp"
            android:id="@+id/tvCategoryReceived"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_category_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCategoryAnnScr"
            app:layout_constraintTop_toBottomOf="@+id/clButtonCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@+id/tvCountryReceived"
            android:id="@+id/tvCountryAnnScr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoryAnnScr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginEnd="16dp"
            android:id="@+id/tvCountryReceived"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_category_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCountryAnnScr"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoryReceived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@+id/tvCityReceived"
            android:id="@+id/tvCityAnnScr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryAnnScr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginEnd="16dp"
            android:id="@+id/tvCityReceived"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ads_category_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCityAnnScr"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryAnnScr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/tvProfileAnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/personal_info"
            app:layout_constraintTop_toBottomOf="@+id/tvCityAnnScr" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>